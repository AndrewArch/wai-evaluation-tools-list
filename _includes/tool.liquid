{% assign toolsData = "" | split: "," %}
{% for tool in include.data %}
    {% assign toolsData = toolsData | push: tool[1] %}
{% endfor %}

{% assign toolsDataSorted = toolsData | sort: include.sort_key %}
{% for tool in toolsDataSorted %}
{% capture tool_title %}<a href="{{ tool.location }}" target="_blank">{{ tool.title }}
{% include_cached icon.html name="external-link" %}</a> 
<div class="subheader">
<p class="leftColHeader">by {{ tool.creator }}</p>
<p class="rightColHeader">Last updated: {{ tool.update }}.</p>
</div>
{% endcapture %}

{% capture tool_section_identifier %}aside_{{ tool.title }}{% endcapture %}
{% capture tool_details_id %}{{tool.title}}{% endcapture %}

{% include box.html type="start" title=tool_title id=tool_details_id %}
<h4>Features</h4>
<div class="leftCol">
	<ul>
	{% for assist in tool.assists %}
	  <li>{{ assist }}</li>
	{% endfor %}
	</ul> 
</div>
<div class="rightCol">
	<div class="colRow">
		{% include_cached icon.html name="default" %}<p><b>Evaluate:</b></p>
	</div>
	<div class="colRow">
		{% include_cached icon.html name="code" %}
		<p>{% for type in tool.type %}
		  {{ type }}{% if forloop.last %}{% else %}, {% endif %}
		{% endfor %}</p>
	</div>
	<div class="colRow">
		{% include_cached icon.html name="default" %}
		<p>{% for license in tool.license %}
		  {{ license }}{% if forloop.last %}{% else %}, {% endif %}
		{% endfor %}</p>
	</div>
</div>

{% include excol.html type="start" id=tool_details_id %}
#### Details
{% include excol.html type="middle"%}

<div class="leftCol">
	<h4>Guidelines</h4> 
	{% for guideline in tool.guideline %}
	  <div class="tag">{{ guideline }}</div>
	{% endfor %}
</div>

<div class="rightCol">
	<div class="colRow">
		{% include_cached icon.html name="desktop" %}
		<p>{% for browser in tool.browsers %}
		  {{ browser }}{% if forloop.last %}{% else %}, {% endif %}
		{% endfor %}</p>
	</div>
	<div class="colRow">
	{% include_cached icon.html name="default" %}Operating Systems:
	</div>
	<div class="colRow">
		{% include_cached icon.html name="default" %}<b>Scope:</b>
		<p>{% for automated in tool.automated %}
		  {{ automated }}{% if forloop.last %}{% else %}, {% endif %}
		{% endfor %}</p>
	</div>
	<div class="colRow">
		{% include_cached icon.html name="translations" %}
		<p>{% for language in tool.language %}
		  {{ language }}{% if forloop.last %}{% else %}, {% endif %}
		{% endfor %}</p>
	</div>
	<div class="colRow">
	{% include_cached icon.html name="check-circle" %}<p>Accessible?{{ tools.accessible }}</p>
	</div>
</div>

{% include excol.html type="end" %}
{% include box.html type="end" %}
{% endfor %}

